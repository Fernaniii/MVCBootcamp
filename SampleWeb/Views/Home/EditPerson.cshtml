@model SampleWeb.Models.Person
@{
    ViewData["Title"] = "Home Page";
}

@using (Html.BeginForm("Test", "Home", FormMethod.Post, new { @name = "testForm" })){
    <fieldset>
        <legend>Add New Person</legend>

        <div class="row">
            <label for="Name" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @id = "Name" })
            </div>
        </div>

        <div class="row mt-2">
            <label for="Age" class="col-sm-2 col-form-label">Age</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Age, new { @class = "form-control", @id = "Age" })
            </div>
        </div>
        

        <button type="submit" class="btn btn-success" href=""><i class="icon-save"></i>  Save</button>

    </fieldset>
}